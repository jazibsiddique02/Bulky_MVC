@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successful</h1>
        Your Order Number: @Model <br /><br />
        <img src="~/images/lawn_leaf.jpg" width="65%" alt="Alternate Text" />

    </div>

    <div class="col-12 text-center" style="color:maroon;">
        <br />
        Your Order has been placed successfully!
        <br />
        Payment has been applied successfully <br />
        <a asp-controller="Order" asp-action="Details" class="btn btn-primary" asp-route-orderId="@Model">Back to Order Details</a>
    </div>
</div>