@model IEnumerable<Company>



<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3 my-2">

            <div class="col-12 text-end">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Create New Company</a>
            </div>

        </div>



        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Street Address</th>
                    <th>City</th>
                    <th>Phone Number</th>

                </tr>
            </thead>

         



        </table>
    </div>
</div>



@section Scripts {
    <script src="~/js/company.js"></script>
}




