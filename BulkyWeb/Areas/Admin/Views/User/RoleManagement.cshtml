@model RoleManagementVM




<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Role Management</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="border row border-1">
            <div class="p-3">
                <input asp-for="ApplicationUser.Id" hidden/>

                <div class="form-floating py-2 col-12">
                    <label asp-for="ApplicationUser.Name" class="ms-2"></label>
                    <input readonly asp-for="ApplicationUser.Name" class="form-control border-0 shadow my-2" />
                    <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label class="ms-2"></label>
                    <select id="roleSelect" class="form-control border-0 shadow my-2" asp-for="CurrentRole" asp-items="@Model.Roles">
                        <option selected hidden>@Model.CurrentRole</option>
                    </select>

                </div>
                
                <div class="form-floating py-2 col-12">
                    <label class="ms-2"></label>
                    <select id="companySelect" class="form-control  border-0 shadow my-2" asp-for="CurrentCompany" asp-items="@Model.Companies">
                        <option selected hidden>@Model.CurrentCompany</option>
                    </select>

                </div>
                <div class="row mt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="User" asp-action="Index" class=" me-3 btn form-control border border-1 btn-outline-primary">Back To List</a>
                    </div>

                </div>
            </div>

        </form>

    </div>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const selectElement = document.getElementById('roleSelect');


        selectElement.addEventListener('change', function () {
            const selectedValue = this.value;



            if (selectedValue == "Company") {
                document.getElementById('companySelect').style.display = 'block';

            } else {
                document.getElementById('companySelect').style.display = 'none';
            }
        });

                // Optionally, trigger once on page load to set correct initial visibility
        window.addEventListener('DOMContentLoaded', () => {
            const initialValue = roleSelect.value;
            companySelect.style.display = (initialValue === "Company") ? 'block' : 'none';
        });
       
    </script>
}


